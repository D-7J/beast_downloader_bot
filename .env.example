# Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# PostgreSQL Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/beast_downloader

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Admin User IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# Payment Configuration (Card-to-Card)
PAYMENT_CARD_NUMBER=6037-XXXX-XXXX-XXXX
PAYMENT_CARD_OWNER="John Doe"

# Download Settings
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_TIMEOUT=1800  # 30 minutes in seconds
TEMP_DIR=temp_downloads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Webhook Configuration (if using webhook)
# WEBHOOK_URL=https://yourdomain.com/webhook
# WEBHOOK_PORT=8443
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here
